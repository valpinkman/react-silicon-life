{
  "name": "react-silicon-life",
  "version": "1.0.1",
  "description": "minimal react starter",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --progress --colors --config ./webpack/dev.babel.js",
    "build": "NODE_ENV=production webpack --config ./webpack/prod.babel.js",
    "prettier": "prettier --write \"{src,webpack}/**/*.js\"",
    "lint": "eslint --fix src/",
    "flow": "flow",
    "flow-typed": "flow-typed install -s --overwrite",
    "test": "jest",
    "test-update": "npm test -- -u",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.test.js": "jest",
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "author": "valentin d. pinkman <valentin.d.pinkman@icloud.com",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.4",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.18",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "flow-bin": "^0.71.0",
    "flow-typed": "^2.4.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^22.4.4",
    "lint-staged": "^7.1.2",
    "prettier": "^1.12.1",
    "react-hot-loader": "^4.2.0",
    "react-test-renderer": "^16.3.2",
    "styled-jsx": "^2.2.6",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.8.3",
    "webpack-bundle-analyzer": "^2.13.0",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "isomorphic-unfetch": "^2.0.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0"
  }
}
